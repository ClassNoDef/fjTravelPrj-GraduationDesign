<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="com.travel.fj.dao.CityDao">
    <insert id="createCity" parameterType="City">
        insert into tbl_city(city_name,city_eng_name,city_pic,city_tips) values (#{cityName},#{cityEngName},#{cityPic},#{cityTips})
    </insert>
    <select id="loadAllCity" resultType="City" >
        select * from tbl_city
    </select>
    <select id="getCityById" parameterType="int" resultType="City">
        select * from tbl_city where city_id=#{id}
    </select>
    <select id="getCityByName" parameterType="string" resultType="City">
        select * from tbl_city where city_name=#{name}
    </select>

    <update id="updateCity" parameterType="City">
        update tbl_city
        set city_name=#{cityName},city_eng_name=#{cityEngName},city_pic=#{cityPic},city_tips=#{cityTips}
        where city_id=#{cityId}
    </update>

    <update id="updateAttracCountData" parameterType="City">
        update tbl_city
        set attrac_count=#{attracCount}
        where city_id=#{cityId}
    </update>

    <delete id="deleteCity" parameterType="int">
        delete from tbl_city where city_id=#{id}
    </delete>

    <select id="getCityPic" parameterType="int" resultMap="imgResultMap">
        select city_pic from tbl_city where city_id=#{id}
    </select>

    <resultMap type="java.util.Map" id="imgResultMap" >
        <result   column="city_pic" property="imgBytes" jdbcType="BLOB" typeHandler="org.apache.ibatis.type.BlobTypeHandler"/>
    </resultMap>
</mapper>
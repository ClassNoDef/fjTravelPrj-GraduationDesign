<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--命名空间应该是对应接口的包名+接口名 -->
<mapper namespace="com.travel.fj.dao.NoteTypeDao">
    <insert id="createNoteType" parameterType="NoteType">
        insert into tbl_note_type(note_type_name) values (#{noteTypeName})
    </insert>
    <select id="loadAllNoteType" resultType="NoteType" >
        select * from tbl_note_type
    </select>
    <select id="getNoteTypeById" parameterType="int" resultType="NoteType">
        select * from tbl_note_type where note_type_id=#{id}
    </select>
    <update id="updateNoteType" parameterType="NoteType">
        update tbl_note_type
        set note_type_name=#{noteTypeName}
        where note_type_id=#{noteTypeId}
    </update>
    <update id="updateNoteCountData" parameterType="NoteType">
        update tbl_note_type
        set note_count=#{noteCount}
        where note_type_id=#{noteTypeId}
    </update>
    <delete id="deleteNoteType" parameterType="int">
        delete from tbl_note_type where note_type_id=#{id}
    </delete>
</mapper>